use platform

var pkg_info = (xrepo fetch --json emscripten | from-json)
var emsdk_path = $pkg_info[0][artifacts][installdir]
set-env EMSDK $emsdk_path

if $platform:is-windows {
    set-env EMSDK_PYTHON $emsdk_path\python\3.9.2-nuget_64bit\python.exe
    set paths = [
        ~/scoop/shims/
        $emsdk_path/upstream/emscripten
        $emsdk_path\python\3.9.2-nuget_64bit\
    ]
}

emar.bat --version

xmake build -vD
